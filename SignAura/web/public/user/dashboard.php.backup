<script src="https://cdn.jsdelivr.net/npm/@tensorflow/tfjs@4.9.0/dist/tf.min.js"></script>

<script>
    // Fetch user info
    fetch("fetch_user.php")
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                username.innerText = data.username;
                user-info.innerHTML = `ğŸ“§ ${data.email} | ğŸ‘¤ ${data.role}`;
            }
        });

    // Webcam
    navigator.mediaDevices.getUserMedia({ video: true })
        .then(stream => video.srcObject = stream)
        .catch(err => console.error("Webcam access error:", err));

    // Text-to-speech
    function speak(text, lang) {
        if (text && text !== '-') {
            let u = new SpeechSynthesisUtterance(text);
            u.lang = lang;
            speechSynthesis.speak(u);
        }
    }

    speak-en.onclick = () => speak(output-en.innerText, 'en-US');
    speak-si.onclick = () => speak(output-si.innerText, 'si-LK');
    speak-ta.onclick = () => speak(output-ta.innerText, 'ta-IN');

    // SAVE PREDICTIONS FOR FEEDBACK PAGE
    function savePrediction() {
        if (output-en.innerText !== '-') {
            localStorage.setItem("last_prediction_en", output-en.innerText);
            localStorage.setItem("last_prediction_si", output-si.innerText);
            localStorage.setItem("last_prediction_ta", output-ta.innerText);
        }
    }

    setInterval(savePrediction, 1000);

